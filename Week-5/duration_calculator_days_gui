import numpy as np
import tkinter as tk
from tkinter import messagebox

def calculate_duration():
    start_date_str = start_entry.get()
    use_today = use_today_var.get()

    try:
        start_date = np.datetime64(start_date_str, 'D')
    except ValueError:
        messagebox.showerror("Invalid Date", "Start date must be in YYYY-MM-DD format.")
        return

    if use_today:
        end_date = np.datetime64('today', 'D')
    else:
        end_date_str = end_entry.get()
        try:
            end_date = np.datetime64(end_date_str, 'D')
        except ValueError:
            messagebox.showerror("Invalid Date", "End date must be in YYYY-MM-DD format.")
            return

    duration = (end_date - start_date).astype(int)
    result_label.config(text=f"Duration: {duration} days")

# GUI setup
root = tk.Tk()
root.title("Date Duration Calculator")

tk.Label(root, text="Start Date (YYYY-MM-DD):").grid(row=0, column=0, padx=10, pady=5)
start_entry = tk.Entry(root)
start_entry.grid(row=0, column=1, padx=10, pady=5)

use_today_var = tk.BooleanVar(value=True)
tk.Checkbutton(root, text="Use today's date as end date", variable=use_today_var).grid(row=1, columnspan=2, padx=10, pady=5)

tk.Label(root, text="End Date (YYYY-MM-DD):").grid(row=2, column=0, padx=10, pady=5)
end_entry = tk.Entry(root)
end_entry.grid(row=2, column=1, padx=10, pady=5)

tk.Button(root, text="Calculate Duration", command=calculate_duration).grid(row=3, columnspan=2, pady=10)

result_label = tk.Label(root, text="Duration: ")
result_label.grid(row=4, columnspan=2, pady=5)

root.mainloop()
